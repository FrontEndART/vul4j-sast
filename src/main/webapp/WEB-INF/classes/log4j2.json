{
    "configuration": {
        "status": "error",
        "name": "LadaLogger",
        "properties": {
            "property": [{
                "name": "filename",
                "value": "lada-test.log"
            }, {
                "name": "directory",
                "value": "../log"
            }]
        },
        "appenders": {
            "RollingFile": {
                "name": "File",
                "fileName": "${directory}/${filename}",
                "filePattern": "${directory}/${date:yyyy-MM}/test-%d{MM-dd-yyyy}-%i.log",
                "patternLayout": {
                    "pattern": "%d %p %logger: %m%n"
                },
                "policies": {
                    "SizeBasedTriggeringPolicy": {
                        "size": "2 MB"
                    }
                },
                "DefaultRolloverStrategy": {
                    "max": "10"
                }
            }
        },
        "loggers": {
            "root": {
                "level": "debug",
                "appender-ref": {
                    "ref": "File"
                }
            }
        }
    }
}
