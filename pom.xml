	<groupId>render</groupId>
	<artifactId>quantify</artifactId>
	<packaging>jar</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>quantifyit</name>
	<url>http://github.com/fractal/quantifyit/tree/master</url>
