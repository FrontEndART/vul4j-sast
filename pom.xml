<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <!--+- - - - - - -+
      + Coordinates +
      +- - - - - - -+-->
  <groupId>de.communicode</groupId>
  <artifactId>communikey</artifactId>
  <version>0.0.0</version>
  <packaging>jar</packaging>

  <!--+- - - - +
      + Parent +
      +- - - - +-->
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>1.4.0.RELEASE</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>

  <!--+- - - - - - - - - - -+
      + Project Information +
      +- - - - - - - - - - -+-->
  <name>communikey</name>
  <description>A simple centralized, cross-platform credential manager.</description>
  <url>https://communikey.test.communicode.de</url>
  <inceptionYear>2016</inceptionYear>
  <organization>
    <name>communicode AG</name>
    <url>http://communicode.de</url>
  </organization>

  <!-- +- Developers -+ -->
  <developers>
    <developer>
      <id>sgreb</id>
      <name>Sven Greb</name>
      <email>sgreb@communicode.de</email>
      <organization>communicode AG</organization>
      <organizationUrl>http://communicode.de</organizationUrl>
    </developer>
  </developers>

  <!--+- - - - - - - - - - +
      + Project Properties +
      +- - - - - - - - - - +-->
  <properties>
    <application.classpath.prefix>lib</application.classpath.prefix>
    <application.mainclass>CommunikeyApplication</application.mainclass>
    <!-- The scope of the dependency artifacts to copy to the classpath prefix directory. -->
    <dependencies.scope>runtime</dependencies.scope>
    <java.version>1.8</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <!--+- - - - - - -+
      + Environment +
      +- - - - - - -+-->
  <!--+- SCM -+ -->
  <scm>
    <connection>scm:ssh://git@stash.communicode.de:7999/cc/communikey.git</connection>
    <developerConnection>scm:ssh://git@stash.communicode.de:7999/cc/communikey.git</developerConnection>
    <tag>HEAD</tag>
    <url>https://stash.communicode.de/projects/CC/repos/communikey</url>
  </scm>

  <!--+- - - - - - - +
      + Dependencies +
      +- - - - - - - +-->
  <dependencies>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-security</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-thymeleaf</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-library</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!--+- - - -+
      + Build +
      +- - - -+-->
  <build>
    <!--+- - - - -+
        + Plugins +
        +- - - - -+-->
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <!--+- - - - - - - +
      + Repositories +
      +- - - - - - - +-->
  <repositories>
    <!-- +- Maven Central -+-->
      <!--
      The default Apache Maven Central Repository with enabled snapshots.
      Inherited from the Super POM.
      -->
    <repository>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
      <layout>default</layout>
      <snapshots>
        <enabled>true</enabled>
        <checksumPolicy>warn</checksumPolicy>
      </snapshots>
      <releases>
        <enabled>true</enabled>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
    </repository>
  </repositories>

  <!--+- - - - - - - - - - -+
      + Plugin Repositories +
      +- - - - - - - - - - -+-->
  <pluginRepositories>
    <!-- +- Maven Central -+-->
      <!--
      The default Apache Maven Plugin Repository with enabled snapshots.
      Inherited from the Super POM.
      -->
    <pluginRepository>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
      <layout>default</layout>
      <snapshots>
        <enabled>true</enabled>
        <checksumPolicy>warn</checksumPolicy>
      </snapshots>
      <releases>
        <enabled>true</enabled>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
    </pluginRepository>
  </pluginRepositories>

  <!--+- - - - - +
      + Profiles +
      +- - - - - +-->
  <profiles>
    <!-- +- code-coverage -+-->
    <!--
    Prepares the agent and creates a code coverage report.
    References:
      http://www.eclemma.org/jacoco/trunk/doc/report-mojo.html
      http://www.eclemma.org/jacoco/trunk/doc/prepare-agent-mojo.html
    -->
    <profile>
      <id>code-coverage</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.7.7.201606060606</version>
            <executions>
              <execution>
                <goals>
                  <goal>prepare-agent</goal>
                </goals>
              </execution>
              <execution>
                <id>coverage-report</id>
                <phase>test</phase>
                <goals>
                  <goal>report</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
